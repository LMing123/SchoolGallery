
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
@model SchoolGallery.Models.AccountModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>后台</title>
    <link rel="stylesheet" href="~/layui/css/layui.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="header" id="head">
        <div class="title">管理系统</div>

    </div>

    <div class="wrap" id="wrap">
        <div class="logGet">
            <!-- 头部提示信息 -->
            <div class="logD logDtip">
                <p class="p1">登录</p>
            </div>
  
                <form class="layui-form" asp-action="Login" method="post">
                    <div class="layui-form-item">
                        <label class="layui-form-label">账号</label>
                        <div class="layui-input-inline">
                            <input class="layui-input" placeholder="账号" asp-for="AccountID" />
                        </div>

                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">密码</label>
                        <div class="layui-input-inline">
                            <input class="layui-input" id="InputPassWord" placeholder="密码" asp-for="PassWord" />
                        </div>
                    </div>
                    <div class="layui-form-item">

                        <div class="layui-input-block">
                            <button type="submit" class="layui-btn">登录</button>
                        </div>
                    </div>

                </form>

     

        </div>
    </div>

    <div class="footer" id="foot">
        <div class="copyright">
            <p>Copyright © xxxxxxx</p>
        </div>

    </div>


</body>

