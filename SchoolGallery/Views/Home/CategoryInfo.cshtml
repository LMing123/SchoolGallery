
@{
    Layout = null;
}
@using SchoolGallery.Models;
@using PagedList.Core;
@using PagedList.Core.Mvc;
@model IPagedList<ContentModel>;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>后台</title>
    <link rel="stylesheet" type="text/css" href="~/css/base.css" />
    <link rel="stylesheet" href="~/layui/css/layui.css">
    <link rel="stylesheet" type="text/css" href="~/css/list.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body class="layui-layout-body">
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <div class="container">
        <div class="content">
            <ul class="text-list">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="icon">>></div>
                        <a class="text-name" asp-action="detail" asp-route-id="@item.ID">【文件】@item.Title</a>
                        <div class="date">@item.PublishTime</div>
                    </li>
                }


            </ul>
        </div>
        <pager list="Model" options="@PagedListRenderOptions.TwitterBootstrapPager" asp-action="CategoryInfo" asp-controller="Home" param-page-number="pageNum" asp-route-id="@ViewBag.ID" ></pager>
    </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/layui/layui.js"></script>
</body>
</html>

