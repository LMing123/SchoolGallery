
@{
    ViewData["Title"] = "佐证材料";
    Layout = null;
}
@using SchoolGallery.Models;
@model List<CategoryModel>;
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/css/base.css" />
    <link rel="stylesheet" href="~/layui/css/layui.css">
    <link rel="stylesheet" type="text/css" href="~/css/index.css" />
</head>

<body>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <div class="banner"><img src="~/images/banner.jpg" /></div>

    <header>
        <div class="header-wrap">
            <ul class="layui-nav layui-bg-cyan" lay-filter="">
                <li class="layui-nav-item">
                    <a asp-action="Index">首页</a>
                </li>
                @foreach (var item in Model)
                {
                    <li class="layui-nav-item">
                        <a asp-action="Category" asp-route-id="@item.ID">@item.Title</a>
                    </li>
                }


            </ul>
        </div>
    </header>

    <div class="container">
        <ul class="container">
            @foreach (var item in Model)
            {
                <li class="module-item">
                    <div class="item-img-wrap">
                        <img src="~/images/detial_no_pic.png" />
                    </div>
                    <div class="test"><a asp-action="Category" asp-route-id="@item.ID">@item.Title</a></div>
                </li>
            }


        </ul>
    </div>

    <footer></footer>

    <script type="text/javascript" src="js/jquery-1.12.4.min.js"></script>
    <script src="layui/layui.js"></script>
    <script type="text/javascript" src="js/index.js"></script>
</body>


</html>